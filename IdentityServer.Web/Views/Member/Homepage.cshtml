@model UserProfileViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanici Bilgileri</h3>
<div class="row">
    <div class="col-sm-3">
        <img 
            style="width:100%; height:100%;"
            src="~/images/userPictures/@Model.Picture" />
    </div>
    <div class="col-sm-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanici ismi</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Sehir</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>Dogum Tarihi</th>
                <td>@Model.BirthDate.Value.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Telefon no</th>
                <td>@Model.PhoneNumber</td>
            </tr>

        </table>
    </div>

</div>
